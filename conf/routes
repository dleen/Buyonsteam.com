# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET	/						controllers.Application.index

GET /game					controllers.Application.gameP(g ?= "")

GET	/reindex				controllers.Application.reindex

GET /manmatch				controllers.Application.manualMatching(p: Int ?= 0)
GET /matchexact				controllers.Application.matchExact
GET /matchsimilar			controllers.Application.matchSimilar

GET	/autocompleteSearch		controllers.Application.autocompleteSearch(term: String ?= "")
POST /matchem				controllers.Application.matchem(id1: Int, id2: Int, p: Int ?= 0)

GET	/:name					controllers.Application.gameQ(name: String)

# Map static resources from the /public folder to the /assets URL path
GET	/assets/*file			controllers.Assets.at(path="/public", file)
